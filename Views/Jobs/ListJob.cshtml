@model IEnumerable<FPTJOB.Models.Job>

@{
    ViewData["Title"] = "ListJob";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="padding-top: 20px;" class="col-md-12">

    <div style="text-align: center;">
        <h1 style="font-weight: bold; font-size: 50px; text-decoration: none; margin-bottom: 0; color: #f2721e;">Job List</h1>
    </div>

</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Deadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObjCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Deadline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ObjCategory.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <i class="fa fa-eye fa-2x" aria-hidden="true" style="color: #f2721e;"></i>
                    </a>&nbsp;&nbsp;
                </td>
            </tr>
        }
    </tbody>
</table>
