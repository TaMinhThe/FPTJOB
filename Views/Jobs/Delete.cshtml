@model FPTJOB.Models.Job

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="padding-top: 20px;" class="col-md-12">
    <div class="card card-primary">
        <div style="padding-top: 20px;">
            <div style="text-align: center;">
                <h1 style="font-weight: bold; font-size: 50px; text-decoration: none; margin-bottom: 0; color: #f2721e;">Delete Job</h1>
            </div>
        </div>
        <div>

            <hr />
            <div style="padding-top: 20px;" class="container">
                <div class="row justify-content-center">
                    <div class="col-sm-8">
                        <dl class="row">
                            <dt class="col-sm-4" style="border-bottom: 1px solid #E3E1D9; margin-bottom: 30px;padding-bottom: 5px;">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-8" style="border-bottom: 1px solid #E3E1D9; margin-bottom: 30px;padding-bottom: 5px;">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-sm-4" style="border-bottom: 1px solid #E3E1D9; margin-bottom: 30px;padding-bottom: 5px;">
                                @Html.DisplayNameFor(model => model.Industry)
                            </dt>
                            <dd class="col-sm-8" style="border-bottom: 1px solid #E3E1D9; margin-bottom: 30px;padding-bottom: 5px;">
                                @Html.DisplayFor(model => model.Industry)
                            </dd>
                            <dt class="col-sm-4" style="border-bottom: 1px solid #E3E1D9; margin-bottom: 30px;padding-bottom: 5px;">
                                @Html.DisplayNameFor(model => model.Location)
                            </dt>
                            <dd class="col-sm-8" style="border-bottom: 1px solid #E3E1D9; margin-bottom: 30px;padding-bottom: 5px;">
                                @Html.DisplayFor(model => model.Location)
                            </dd>
                            <dt class="col-sm-4" style="border-bottom: 1px solid #E3E1D9; margin-bottom: 30px;padding-bottom: 5px;">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="col-sm-8" style="border-bottom: 1px solid #E3E1D9; margin-bottom: 30px;padding-bottom: 5px;">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                            <dt class="col-sm-4" style="border-bottom: 1px solid #E3E1D9; margin-bottom: 30px;padding-bottom: 5px;">
                                @Html.DisplayNameFor(model => model.Requirement)
                            </dt>
                            <dd class="col-sm-8" style="border-bottom: 1px solid #E3E1D9; margin-bottom: 30px;padding-bottom: 5px;">
                                @Html.DisplayFor(model => model.Requirement)
                            </dd>
                            <dt class="col-sm-4" style="border-bottom: 1px solid #E3E1D9; margin-bottom: 30px;padding-bottom: 5px;">
                                @Html.DisplayNameFor(model => model.Deadline)
                            </dt>
                            <dd class="col-sm-8" style="border-bottom: 1px solid #E3E1D9; margin-bottom: 30px; padding-bottom: 5px;">
                                @Html.DisplayFor(model => model.Deadline)
                            </dd>
                            <dt class="col-sm-4" style="border-bottom: 1px solid #E3E1D9; margin-bottom: 30px; padding-bottom: 5px;">
                                @Html.DisplayNameFor(model => model.ObjCategory)
                            </dt>
                            <dd class="col-sm-8" style="border-bottom: 1px solid #E3E1D9; margin-bottom: 30px; padding-bottom: 5px;">
                                @Html.DisplayFor(model => model.ObjCategory.Name)
                            </dd>
                        </dl>

                        <div class="d-flex justify-content-center align-items-center" style="margin-top: 30px; margin-bottom: 20px;">
                            <div class="col-md-6 text-center">
                                <form id="deleteForm" asp-action="Delete">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="button" value="Delete" class="btn btn-danger" style="margin: 20px;" onclick="confirmDelete()" />
                                    <a class="btn btn-primary" asp-action="Index">Back to List</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script>
                function confirmDelete() {
                    var result = confirm("Are you sure you want to delete?");
                    if (result) {
                        document.getElementById("deleteForm").submit();
                    }
                }
            </script>
        </div>
    </div>
</div>
