@model FPTJOB.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="padding-top: 20px;" class="col-md-12">

    <div class="card card-secondary">
        <div style="padding-top: 20px;">
            <div style="text-align: center;">
                <h1 style="font-weight: bold; font-size: 50px; text-decoration: none; margin-bottom: 0; color: #f2721e;">Edit Categories</h1>
            </div>
        </div>

        <hr />

        <div class="d-flex justify-content-center">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Status" />@Html.DisplayNameFor(model => model.Status)
                        </label>
                    </div>
                    <div style="display: flex; justify-content: center;">
                        <div style="margin: 40px;">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                        <div style="margin: 40px;">
                            <a class="btn btn-danger" asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}