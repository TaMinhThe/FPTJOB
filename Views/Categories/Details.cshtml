@model FPTJOB.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="padding-top: 30px;" class="col-md-12">
    <div class="card card-primary">

        <div style="padding-top: 20px;">
            <div style="text-align: center;">
                <h1 style="font-weight: bold; font-size: 50px; text-decoration: none; margin-bottom: 0; color: #f2721e;">Detail Category</h1>
            </div>
        </div>



        <div style="padding-top: 20px;" class="d-flex justify-content-center align-items-center">
            <div class="col-md-6" style="margin-left: auto; margin-right: auto;">
                <table class="table custom-table">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <td>@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                        <td>@Html.DisplayFor(model => model.Status)</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="d-flex justify-content-center align-items-center" style="margin-top: 20px; margin-bottom: 20px;">
            <div style="display: flex; justify-content: center; align-items: center;">
                <a class="btn btn-primary" style="margin: 20px;" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                <div style="width: 10px;"></div>
                <a class="btn btn-danger" asp-action="Index">Back to List</a>
                <div style="width: 10px;"></div>
            </div>
        </div>

    </div>
</div>
