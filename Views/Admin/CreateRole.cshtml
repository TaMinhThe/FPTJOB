@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="text-align: center;">
    <h1 style="font-weight: bold; font-size: 50px; text-decoration: none; margin-bottom: 0; color: #f2721e;">Create Role</h1>
</div>
<div class="card card-primary">
    <div class="card-body">
<div class="container">
    <form method="post" action="/Admin/CreateRole" class="mt-4">
        <div class="form-group row">
            <label for="roleName" class="col-sm-2 col-form-label">Role's Name:</label>
            <div class="col-sm-10">
                <input type="text" id="roleName" name="roleName" class="form-control" required />
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Create role</button>
        </div>
    </form>
</div>
</div>
</div>