@model FPTJOB.Models.ApplyJob

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="padding-top: 20px;" class="col-md-12">
    <div class="card card-secondary">
        <div style="padding-top: 20px;" class="d-flex justify-content-center">
            <div style="text-align: center;">
                <h1 style="font-weight: bold; font-size: 50px; text-decoration: none; margin-bottom: 0; color: #f2721e;">Edit Job Application</h1>
            </div>
        </div>
      
        <div style="padding-top: 20px;" class="row justify-content-center">
            <div class="col-md-4 d-flex justify-content-center">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RegDate" class="control-label"></label>
                <input asp-for="RegDate" class="form-control" />
                <span asp-validation-for="RegDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfileId" class="control-label"></label>
                <select asp-for="ProfileId" class="form-control" asp-items="ViewBag.ProfileId"></select>
                <span asp-validation-for="ProfileId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobId" class="control-label"></label>
                <select asp-for="JobId" class="form-control" asp-items="ViewBag.JobId"></select>
                <span asp-validation-for="JobId" class="text-danger"></span>
            </div>
                    <div style="display: flex; justify-content: center;">
                        <div style="margin: 40px;">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                        <div style="margin: 40px;">
                            <a class="btn btn-danger" href="~/jobs">Back to List</a>
                        </div>
                    </div>
        </form>
</div>
 </div>
 </div>
</div>



