@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        max-width: 600px;
        margin-top: 50px;
    }

    .forgot-password-card {
        background-color: #ffffff;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
        padding: 40px;
    }

        .forgot-password-card h1 {
            color: #333333;
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .forgot-password-card h2 {
            color: #555555;
            font-size: 18px;
            font-weight: 500;
            margin-bottom: 20px;
        }

        .forgot-password-card .form-floating {
            position: relative;
            margin-bottom: 20px;
        }

            .forgot-password-card .form-floating input {
                background-color: #f2f2f2;
                border: none;
                border-radius: 3px;
                padding: 12px;
                margin-bottom: 0;
                color: #333333;
                width: 100%;
                font-size: 16px;
            }

            .forgot-password-card .form-floating label {
                position: absolute;
                top: 50%;
                left: 12px;
                transform: translateY(-50%);
                color: #555555;
                font-size: 14px;
                font-weight: 500;
                pointer-events: none;
                transition: all 0.3s ease;
            }

            .forgot-password-card .form-floating input:focus {
                outline: none;
                box-shadow: none;
                background-color: #e6e6e6;
            }

                .forgot-password-card .form-floating input:focus + label,
                .forgot-password-card .form-floating input:not(:placeholder-shown) + label {
                    top: 0;
                    font-size: 12px;
                    transform: translateY(-100%);
                }

        .forgot-password-card .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 3px;
            padding: 14px;
            font-size: 16px;
            font-weight: 500;
            text-transform: uppercase;
            width: 100%;
        }

            .forgot-password-card .btn-primary:hover {
                background-color: #0069d9;
            }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="forgot-password-card">
                <h1>@ViewData["Title"]</h1>
                <h2>Enter your email.</h2>
                
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}