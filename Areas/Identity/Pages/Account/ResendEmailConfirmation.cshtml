@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div style="background-color: #f8f9fa; font-family: Arial, sans-serif; padding-top: 50px; text-align: center;">
    <div style="background-color: #ffffff; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); border-radius: 5px; padding: 30px; display: inline-block;">
        <h1 style="font-size: 24px; font-weight: 600; margin-bottom: 20px;">@ViewData["Title"]</h1>
        <h2 style="font-size: 18px; font-weight: 500; margin-bottom: 20px;">Enter your email.</h2>
        <hr />
        <div style="text-align: left;">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                <div style="margin-bottom: 20px;">
                    <label for="email" style="font-weight: 500;">Email</label>
                    <br />
                    <input asp-for="Input.Email" class="form-control" id="email" aria-required="true" placeholder="name@example.com" style="width: 100%; padding: 10px; border-radius: 3px; border: 1px solid #ced4da; background-color: #f2f2f2; color: #333333;" />
                    <br />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn-primary" style="width: 100%; padding: 12px; font-size: 16px; font-weight: 500; text-transform: uppercase; background-color: #007bff; border: none; border-radius: 3px; color: #ffffff; cursor: pointer;">Resend</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}